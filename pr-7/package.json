{
  "name": "pr-7",
  "version": "1.0.0",
  "description": "Student Management API with Authentication, Authorization, Testing, Logging, Monitoring and Swagger",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "create-db": "node scripts/create-db.js",
    "migrate": "node migrations/migrate.js",
    "setup": "npm run create-db && npm run migrate",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --coverage --testPathIgnorePatterns=integration",
    "test:integration": "jest --testPathPattern=integration"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "express-status-monitor": "^1.2.3",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/migrations/**",
      "!**/scripts/**",
      "!index.js",
      "!**/config/**",
      "!**/__tests__/**/*.test.js",
      "!**/__tests__/**/*.spec.js",
      "!**/__tests__/**/*.integration.test.js",
      "!**/__tests__/integration/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/migrations/",
      "/scripts/",
      "/config/",
      "index.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/__tests__/**/*.spec.js",
      "**/__tests__/**/*.integration.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  }
}
